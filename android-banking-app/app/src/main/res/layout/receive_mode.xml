<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_gray"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- QR Code Card -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="320dp"
        android:background="@color/accent_red"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- QR Code Area -->
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@color/background_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- QR Code Pattern (Simulated) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_white"
                android:gravity="center">

                <!-- This represents the QR code pattern -->
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@color/accent_red"
                    android:gravity="center"
                    android:text="QR"
                    android:textColor="@color/background_white"
                    android:textSize="48sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Malaysia National QR Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/malaysia_national_qr"
            android:textColor="@color/background_white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Instruction Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/show_qr_instruction"
        android:textColor="@color/text_gray"
        android:textSize="16sp" />

    <!-- Wallet Info Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Wallet Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_title"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/masked_account"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Change Button -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change"
            android:textColor="@color/text_blue"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <!-- Share Button -->
        <Button
            android:id="@+id/share_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:background="@color/background_white"
            android:text="@string/share"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <!-- Enter Amount Button -->
        <Button
            android:id="@+id/enter_amount_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:background="@color/primary_yellow"
            android:text="@string/enter_amount"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
