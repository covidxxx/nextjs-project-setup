<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_gray">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/scan_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title and Close Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/scan_and_pay"
                android:textColor="@color/text_black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/close_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:background="@color/text_gray"
                android:gravity="center"
                android:text="âœ•"
                android:textColor="@color/background_white"
                android:textSize="18sp" />

        </RelativeLayout>

        <!-- Pay/Receive Toggle Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_light_gray"
            android:orientation="horizontal"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/pay_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/background_white"
                android:gravity="center"
                android:layout_marginRight="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/receive_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/background_light_gray"
                android:gravity="center"
                android:layout_marginLeft="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/receive"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Content Area (switches between camera and receive mode) -->
    <FrameLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scan_header">

        <!-- Camera Scanner Area (PAY mode) -->
        <RelativeLayout
            android:id="@+id/camera_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/text_black"
            android:visibility="visible">

            <!-- Scanner Frame -->
            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_centerInParent="true">

                <!-- Top Left Corner -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/primary_yellow" />
                
                <View
                    android:layout_width="4dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/primary_yellow" />

                <!-- Top Right Corner -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/primary_yellow" />
                
                <View
                    android:layout_width="4dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/primary_yellow" />

                <!-- Bottom Left Corner -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/primary_yellow" />
                
                <View
                    android:layout_width="4dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/primary_yellow" />

                <!-- Bottom Right Corner -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/primary_yellow" />
                
                <View
                    android:layout_width="4dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/primary_yellow" />

            </RelativeLayout>

            <!-- Instruction Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="120dp"
                android:text="@string/place_qr_code"
                android:textColor="@color/background_white"
                android:textSize="16sp" />

            <!-- Bottom Controls for PAY mode -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/text_black"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Flashlight and Show QR Button Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <!-- Flashlight Button -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/text_gray"
                            android:gravity="center"
                            android:text="ðŸ”¦"
                            android:textColor="@color/background_white"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <!-- Show QR Code Button -->
                    <Button
                        android:id="@+id/show_qr_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="2"
                        android:background="@color/background_white"
                        android:text="@string/show_qr_code"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                    <!-- Empty space for balance -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <!-- Scan from Gallery -->
                <LinearLayout
                    android:id="@+id/scan_from_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scan_qr_from_gallery"
                        android:textColor="@color/text_blue"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <!-- Receive Mode Area -->
        <include
            android:id="@+id/receive_area"
            layout="@layout/receive_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

</RelativeLayout>
